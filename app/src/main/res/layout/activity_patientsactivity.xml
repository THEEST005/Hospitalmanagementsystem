<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patientsactivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="114dp"
        android:layout_height="0dp"
        android:layout_marginTop="103dp"
        android:layout_marginBottom="43dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/edtname_patients"
        app:layout_constraintStart_toStartOf="@+id/edtname_patients"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PATIENT DETAILS" />

    <EditText
        android:id="@+id/edtname_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Enter Patient's Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edtage_patients"
        app:layout_constraintStart_toStartOf="@+id/edtage_patients"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edtage_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Enter Patient's Age"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edtgender_patients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtname_patients" />

    <EditText
        android:id="@+id/edtgender_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Enter Patient's Gender"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edtphone_patients"
        app:layout_constraintStart_toStartOf="@+id/edtage_patients"
        app:layout_constraintTop_toBottomOf="@+id/edtage_patients" />

    <EditText
        android:id="@+id/edtphone_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/btndetails_patients"
        app:layout_constraintStart_toStartOf="@+id/edtgender_patients"
        app:layout_constraintTop_toBottomOf="@+id/edtgender_patients" />

    <Button
        android:id="@+id/btndetails_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginBottom="138dp"
        android:text="SUBMIT DETAILS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtphone_patients" />
</androidx.constraintlayout.widget.ConstraintLayout>